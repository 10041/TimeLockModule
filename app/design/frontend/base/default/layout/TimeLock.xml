<?xml version="1.0" ?>
<layout version="1.0.0">
    <catalog_product_view>
        <reference name="content">
            <reference name="product.info.addtocart">
                <action method="setTemplate">
                    <template>TimeLock/buttonProduct.phtml</template>
                </action>
            </reference>
        </reference>
    </catalog_product_view>
    <catalog_category_default>
        <reference name="product_list">
            <action method="setTemplate">
                <template>TimeLock/buttonProductList.phtml</template>
            </action>
        </reference>
    </catalog_category_default>
    <catalog_category_layered>
        <reference name="product_list">
            <action method="setTemplate">
                <template>TimeLock/buttonProductList.phtml</template>
            </action>
        </reference>
    </catalog_category_layered>
    <wishlist_index_index>
        <reference name="customer.wishlist.item.cart">
            <action method="setTemplate">
                <template>TimeLock/buttonWishlist.phtml</template>
            </action>
        </reference>
        <reference name="customer.wishlist.button.toCart">
            <action method="setTemplate">
                <template>TimeLock/buttonWishlistToCart.phtml</template>
            </action>
        </reference>
    </wishlist_index_index>
    <catalog_product_compare_index>
        <reference name="catalog.compare.list">
            <action method="setTemplate">
                <template>TimeLock/compareList.phtml</template>
            </action>
        </reference>
    </catalog_product_compare_index>
</layout>